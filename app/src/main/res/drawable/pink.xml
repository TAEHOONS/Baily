<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <solid android:color="#FF8000"/>
            <stroke
                android:width="2dp"
                android:color="#FC6464" />
            <corners
                android:radius="9dp" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <solid android:color="#FF8000"/>
            <stroke
                android:width="2dp"
                android:color="#FC6464" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <solid android:color="#FCC8C8"/>
            <stroke
                android:width="2dp"
                android:color="#FC6464" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#FCC8C8"
                android:centerColor="#FCC8C8"
                android:endColor="#FCC8C8"
                android:angle="270"
                />
            <stroke
                android:width="2dp"
                android:color="#FC6464" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </shape>
    </item>

</selector>