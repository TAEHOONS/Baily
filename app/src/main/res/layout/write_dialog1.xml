<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="5">

        <ImageView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/ic_kg" />

        <ImageView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/ic_cm" />

        <ImageView
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/ic_head1" />

        <ImageView
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/ic_temperature2" />

        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:fontFamily="@font/godo"
            android:text="몸무게"
            android:textSize="24dp" />

        <TextView
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:fontFamily="@font/godo"
            android:text="키"
            android:textSize="24dp" />

        <TextView
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:fontFamily="@font/godo"
            android:text="머리 둘레"
            android:textSize="24dp" />

        <TextView
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:fontFamily="@font/godo"
            android:text="체온"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/h_kgAddEdt"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:ems="4"
            android:inputType="numberDecimal"
            android:maxLength="5" />

        <EditText
            android:id="@+id/h_cmAddEdt"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:ems="4"
            android:inputType="numberDecimal"
            android:maxLength="50" />

        <EditText
            android:id="@+id/h_girthAddEdt"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:ems="4"
            android:inputType="numberDecimal"
            android:maxLength="5" />

        <EditText
            android:id="@+id/h_feverAddEdt"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_margin="5dp"
            android:ems="4"
            android:inputType="numberDecimal"
            android:maxLength="5" />

        <TextView
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:fontFamily="@font/godo"
            android:text="kg"
            android:textSize="24dp" />

        <TextView
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:fontFamily="@font/godo"
            android:text="cm"
            android:textSize="24dp" />

        <TextView
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:fontFamily="@font/godo"
            android:text="cm"
            android:textSize="24dp" />

        <TextView
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:fontFamily="@font/godo"
            android:text="°C"
            android:textSize="24dp" />
    </GridLayout>


</LinearLayout>