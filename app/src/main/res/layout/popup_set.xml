<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEEFA"
    android:weightSum="10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popup_TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입력하신 이메일로 인증번호를"
            android:fontFamily="@font/godo"
            android:gravity="center"
            android:textColor="#161B5B"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/popup_TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입력해주세요"
            android:fontFamily="@font/godo"
            android:gravity="center"
            android:textColor="#161B5B"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>
            <Button
                android:id="@+id/popup_Confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bora2"
                android:fontFamily="@font/godo"
                android:text="확인"
                android:textSize="20dp"
                android:layout_weight="1"
               />
        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>
            <Button
                android:id="@+id/popup_Cancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bora2"
                android:fontFamily="@font/godo"
                android:text="취소"
                android:textSize="20dp"
                android:layout_weight="1"
             />
        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>

    </LinearLayout>


</LinearLayout>